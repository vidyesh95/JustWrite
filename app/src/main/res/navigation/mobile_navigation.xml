<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.justwrite.ui.home.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_books"
        android:name="com.example.justwrite.ui.collections.CollectionsFragment"
        android:label="collections"
        tools:layout="@layout/fragment_collections" />

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.example.justwrite.ui.notifications.NotificationsFragment"
        android:label="notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.justwrite.ui.account.AccountFragment"
        android:label="account"
        tools:layout="@layout/fragment_account" />

</navigation>
